{
  "manifest_version": 3,
  "name": "KodeKloud Learning Streak",
  "version": "1.0",
  "description": "Track KodeKloud daily video activity and show your learning streak.",
  "permissions": ["storage", "alarms", "notifications", "scripting"],
  "host_permissions": [
    "https://*.kodekloud.com/*",
    "https://kodekloud.com/*",
    "https://*.learn.kodekloud.com/*",
    "https://learn.kodekloud.com/*",
    "https://*.courses.kodekloud.com/*",
    "https://courses.kodekloud.com/*",
    "https://*.vimeo.com/*",
    "https://vimeo.com/*",
    "https://player.vimeo.com/*",
    "https://*.lensflare.vimeo.com/*",
    "https://lensflare.vimeo.com/*",
    "https://*.arclight.vimeo.com/*",
    "https://arclight.vimeo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "KodeKloud Streak"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.kodekloud.com/*",
        "https://kodekloud.com/*",
        "https://*.learn.kodekloud.com/*",
        "https://learn.kodekloud.com/*",
        "https://*.courses.kodekloud.com/*",
        "https://courses.kodekloud.com/*",
        "https://*.vimeo.com/*",
        "https://vimeo.com/*",
        "https://player.vimeo.com/*",
        "https://*.lensflare.vimeo.com/*",
        "https://lensflare.vimeo.com/*",
        "https://*.arclight.vimeo.com/*",
        "https://arclight.vimeo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
